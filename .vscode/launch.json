    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug: Test API",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "tests.start_test_api:app",
                "--reload",
                "--host",
                "0.0.0.0",
                "--port",
                "5001",
                "--log-level",
                "debug"
            ],
            "jinja": true,
            "justMyCode": false
