         {
            "name": "Debug: Game UI",
            "type": "debugpy",
            "request": "launch",
            "module": "gunicorn",
            "args": [
                "frontend.app:app",
                "-b",
                "0.0.0.0:8000",
            ],
            "jinja": true,
            "justMyCode": false
        }
    ]
